{
    "family": "microservices-task",
    "networkMode": "awsvpc",
    "executionRoleArn": "arn:aws:iam::767397896582:role/ecsTaskExecutionRole",
    "taskRoleArn": "arn:aws:iam::767397896582:role/ecsTaskRole",
    "containerDefinitions": [
        {
            "name": "booking_service",
            "image": "resneak/booking-service:latest",
            "cpu": 256,
            "memory": 512,
            "essential": true,
            "portMappings": [
                {
                    "containerPort": 80,
                    "hostPort": 80
                }
            ]
        },
        {
            "name": "notification_service",
            "image": "resneak/notification-service:latest",
            "cpu": 256,
            "memory": 512,
            "essential": true,
            "portMappings": [
                {
                    "containerPort": 84,
                    "hostPort": 84
                }
            ]
        },
        {
            "name": "flight_management_service",
            "image": "resneak/flight-management-service:latest",
            "cpu": 256,
            "memory": 512,
            "essential": true,
            "portMappings": [
                {
                    "containerPort": 83,
                    "hostPort": 83
                }
            ]
        },
        {
            "name": "payment_service",
            "image": "resneak/payment-service:latest",
            "cpu": 256,
            "memory": 512,
            "essential": true,
            "portMappings": [
                {
                    "containerPort": 82,
                    "hostPort": 82
                }
            ]
        }
    ],
    "requiresCompatibilities": ["FARGATE"],
    "cpu": "1024",
    "memory": "2048"
}
