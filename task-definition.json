{
    "family": "microservices-task",
    "networkMode": "awsvpc",
    "executionRoleArn": "arn:aws:iam::767397896582:role/ecsTaskExecutionRole",
    "taskRoleArn": "arn:aws:iam::767397896582:role/ecsTaskRole",
    "containerDefinitions": [
        {
            "name": "booking_service",
            "image": "767397896582.dkr.ecr.us-east-2.amazonaws.com/fastapi-app:booking_service",
            "cpu": 256,
            "memory": 512,
            "essential": true,
            "portMappings": [
                {
                    "containerPort": 8080,
                    "protocol": "tcp"
                }
            ],
            "logConfiguration": {
                "logDriver": "awslogs",
                "options": {
                    "awslogs-group": "/ecs/microservices-service",
                    "awslogs-region": "us-east-2",
                    "awslogs-stream-prefix": "ecs"
                }
            }
        },
        {
            "name": "notification_service",
            "image": "767397896582.dkr.ecr.us-east-2.amazonaws.com/fastapi-app:notification_service",
            "cpu": 256,
            "memory": 512,
            "essential": true,
            "portMappings": [
                {
                    "containerPort": 8081,
                    "protocol": "tcp"
                }
            ],
            "logConfiguration": {
                "logDriver": "awslogs",
                "options": {
                    "awslogs-group": "/ecs/microservices-service",
                    "awslogs-region": "us-east-2",
                    "awslogs-stream-prefix": "ecs"
                }
            }
        },
        {
            "name": "flight_management_service",
            "image": "767397896582.dkr.ecr.us-east-2.amazonaws.com/fastapi-app:flight_management_service",
            "cpu": 256,
            "memory": 512,
            "essential": true,
            "portMappings": [
                {
                    "containerPort": 8082,
                    "protocol": "tcp"
                }
            ],
            "logConfiguration": {
                "logDriver": "awslogs",
                "options": {
                    "awslogs-group": "/ecs/microservices-service",
                    "awslogs-region": "us-east-2",
                    "awslogs-stream-prefix": "ecs"
                }
            }
        },
        {
            "name": "payment_service",
            "image": "767397896582.dkr.ecr.us-east-2.amazonaws.com/fastapi-app:payment_service",
            "cpu": 256,
            "memory": 512,
            "essential": true,
            "portMappings": [
                {
                    "containerPort": 8083,
                    "protocol": "tcp"
                }
            ],
            "logConfiguration": {
                "logDriver": "awslogs",
                "options": {
                    "awslogs-group": "/ecs/microservices-service",
                    "awslogs-region": "us-east-2",
                    "awslogs-stream-prefix": "ecs"
                }
            }
        }
    ],
    "requiresCompatibilities": ["FARGATE"],
    "cpu": "1024",
    "memory": "2048"
}
